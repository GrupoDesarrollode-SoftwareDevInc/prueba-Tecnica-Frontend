{
	"root": true,
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"rules": {
			"quotes": 0,
			"semi": 1,
			"newline-after-import": 0,
			"linebreak-style": [0, "windows"],
			"no-console": 0
		}
	}
}
